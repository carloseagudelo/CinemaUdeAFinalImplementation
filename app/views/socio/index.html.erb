<p id="notice"><%= notice %></p>

<h1>Lista de Socios registrados</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Documento</th>
      <th>Apellido</th>
      <th>E-mail</th>
      <th>Numero de puntos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @socios.each do |socio| %>
      <tr>
        <td><%= socio.name %></td>
        <td><%= socio.document %></td>
        <td><%= socio.lastName %></td>
        <td><%= socio.email %></td>
        <td><%= socio.numberPoints %></td>
        <td><%= link_to 'Editar', edit_socio_path(socio) %></td>
        <td><%= link_to 'Eliminar', socio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar nuevo socio', new_socio_path %>
